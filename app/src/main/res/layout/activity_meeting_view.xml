<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#56ffff32">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ivFoto"
            android:layout_weight="3"
            android:src="@drawable/foto9"
            android:layout_margin="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Виктория Кожемякина"
            android:id="@+id/tvMeetingContact"
            android:layout_weight="2"
            android:textColor="#ff2020ff"
            android:textSize="24dp"
            android:textStyle="italic"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Время:"
            android:id="@+id/tvMeetingTimeLabel"
            android:layout_weight="2"
            android:textColor="#ff2020ff"
            android:textSize="16dp"
            android:textStyle="italic"
            android:layout_margin="8dp"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="11:00 - 13:00"
            android:id="@+id/tvMeetingTime"
            android:layout_weight="1"
            android:textSize="16dp"
            android:textColor="#ff2020ff"
            android:layout_margin="8dp"
            android:gravity="center" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Место:"
            android:id="@+id/tvMeetingPlaceLabel"
            android:layout_weight="2"
            android:textColor="#ff2020ff"
            android:textSize="16dp"
            android:textStyle="italic"
            android:layout_margin="8dp"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Кинотератр Кронверк"
            android:id="@+id/tvMeetingPlace"
            android:layout_weight="1"
            android:textSize="16dp"
            android:textColor="#ff2020ff"
            android:layout_margin="8dp"
            android:gravity="center" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Тип:"
            android:id="@+id/tvMeetingTopicLabel"
            android:layout_weight="2"
            android:textColor="#ff2020ff"
            android:textSize="16dp"
            android:textStyle="italic"
            android:layout_margin="8dp"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Поход в кино"
            android:id="@+id/tvMeetingType"
            android:layout_weight="1"
            android:textSize="16dp"
            android:textColor="#ff2020ff"
            android:layout_margin="8dp"
            android:textIsSelectable="true"
            android:gravity="center" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/b_Delete"
            android:id="@+id/bMeetingDelete"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="4dp"
            android:textSize="16dp"
            android:textColor="#ff2020ff"
            android:background="#d4d4a040" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/b_Back"
            android:id="@+id/bMeetingBack"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:singleLine="false"
            android:textSize="16dp"
            android:textColor="#ff2020ff"
            android:background="#d4d4a040" />
    </TableRow>
</LinearLayout>