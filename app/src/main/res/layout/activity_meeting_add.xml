<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#56ffff32"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:background="#d4d4a040">

        <TextView
            android:id="@+id/tvTitleLabel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Добавить запись"
            android:textColor="#ff2020ff"
            android:textSize="24dp"
            android:textStyle="italic" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:baselineAligned="false">

        <TextView
            android:id="@+id/tvNameLabel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="left|center_vertical|center"
            android:text="Имя:"
            android:textColor="#ff2020ff"
            android:textIsSelectable="false"
            android:textSize="16dp"
            android:textStyle="italic" />

        <Spinner
            android:id="@+id/sName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/tvTimeLabel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical|bottom"
            android:text="Время"
            android:textColor="#ff2020ff"
            android:textIsSelectable="false"
            android:textSize="16dp"
            android:textStyle="italic" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvTimeFromLabel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="left|center_vertical|center"
            android:text="от:"
            android:textColor="#ff2020ff"
            android:textIsSelectable="false"
            android:textSize="16dp"
            android:textStyle="italic" />

        <Spinner
            android:id="@+id/sTimeFrom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvTimeToLabel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="left|center_vertical|center"
            android:text="до:"
            android:textColor="#ff2020ff"
            android:textIsSelectable="false"
            android:textSize="16dp"
            android:textStyle="italic" />

        <Spinner
            android:id="@+id/sTimeTo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvMeetingTypeLabel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="left|center_vertical|center"
            android:text="Тип:"
            android:textColor="#ff2020ff"
            android:textIsSelectable="false"
            android:textSize="16dp"
            android:textStyle="italic" />

        <Spinner
            android:id="@+id/sMeetingType"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvMeetingPlace"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="left|center_vertical|center"
            android:text="Место:"
            android:textColor="#ff2020ff"
            android:textIsSelectable="false"
            android:textSize="16dp"
            android:textStyle="italic" />

        <Spinner
            android:id="@+id/sMeetingPlace"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:focusable="false">

        <Button
            android:id="@+id/bCancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#d4d4a040"
            android:text="@string/b_Cancel"
            android:textColor="#ff2020ff"
            android:textSize="16dp" />

        <Button
            android:id="@+id/bSave"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#d4d4a040"
            android:text="@string/b_Save"
            android:textColor="#ff2020ff"
            android:textSize="16dp" />
    </TableRow>
</LinearLayout>